<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminCatagoryActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/slogan_catagory"
        android:text="Add New Product"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="27sp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_below="@+id/slogan_catagory"
        android:id="@+id/linear1_category">


        <ImageView
            android:id="@+id/fruits"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:src="@drawable/fruits" />

        <ImageView
            android:id="@+id/foods"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:src="@drawable/food" />

        <ImageView
            android:id="@+id/clothes"
            android:layout_height="80dp"
            android:layout_width="100dp"
            android:src="@drawable/clothes" />

        <ImageView
            android:id="@+id/agro"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:src="@drawable/agro" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_below="@+id/linear1_category"
        android:id="@+id/linear2_category">


        <ImageView
            android:id="@+id/paperbags"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:src="@drawable/paper" />

        <ImageView
            android:id="@+id/ayurved"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:src="@drawable/ayurved" />

        <ImageView
            android:id="@+id/craft"
            android:layout_height="80dp"
            android:layout_width="100dp"
            android:src="@drawable/craft" />

    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/admin_check_orders"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/buttons"
        android:padding="27dp"
        android:text="Check New Orders"
        android:layout_above="@+id/admin_logout"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/admin_logout"
        android:layout_alignParentBottom="true"
        android:layout_margin="20dp"
        android:background="@drawable/buttons"
        android:padding="27dp"
        android:text="Logout"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        />



</RelativeLayout>